doctype
html(lang='en')
    head
        meta(charset='utf8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
        meta(name='description', content='Example')
        meta(name='author', content= 'Thiago Lagden')
        link(rel='stylesheet', type='text/css', href='switch.css')
    title Example
    body
        h1 Example
        form(action='index.html', method='GET')
            div
                .switchRadio
                    label(for='2p') 2p
                    input#2p(type='radio', title='2p', name='porta', value='2p')
                    label(for='4p') 4ppppp
                    input#4p(type='radio', title='4p', name='porta', value='4p')

            div
                .switchRadio
                    label(for='sim') Sim
                    input#sim(type='radio', title='Sim', name='grupo', value='s')
                    label(for='nao') Não
                    input#nao(type='radio', title='Não', name='grupo', value='n')

            button(type='submit') OK


        script(src='lib/get-style-property/get-style-property.js')
        script(src='lib/hammerjs/hammer.js')
        script(src='switch.js')
        script.
            [].forEach.call(document.querySelectorAll('.switchRadio'), function(el, idx, arr) {
                var switchRadio = new Switch(el);
                var labels = el.getElementsByTagName('label');
                switchRadio.build(labels[0].textContent, labels[1].textContent);
            });
